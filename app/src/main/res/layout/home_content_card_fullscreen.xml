<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view_fullscreen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="@dimen/home_card_margin"
        android:elevation="3dp"
        card_view:cardCornerRadius="@dimen/home_card_radius">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/thumbnail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/name_resort"
                android:clickable="true"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:id="@+id/resort_label_view"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_alignParentBottom="true"
                android:background="#4e94ca"
                android:gravity="bottom"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/resort_title"
                    android:paddingBottom="@dimen/resort_title_padding_bottom"
                    android:paddingLeft="@dimen/resort_title_padding"
                    android:paddingRight="@dimen/resort_title_padding"
                    android:paddingTop="@dimen/resort_title_padding_top"
                    android:textSize="@dimen/resort_title" />
                <TextView
                    android:id="@+id/shortDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/resort_title_padding_top"
                    android:paddingLeft="@dimen/resort_title_padding"
                    android:paddingRight="@dimen/resort_title_padding"
                    android:textSize="@dimen/resort_title" />
                <TextView
                    android:id="@+id/amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/resort_title_padding_top"
                    android:paddingLeft="@dimen/resort_title_padding"
                    android:paddingRight="@dimen/resort_title_padding"
                    android:textSize="@dimen/resort_title" />
                <TextView
                    android:id="@+id/likes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/resort_title_padding_bottom"
                    android:paddingLeft="@dimen/resort_title_padding"
                    android:paddingRight="@dimen/resort_title_padding"
                    android:textSize="@dimen/deal_amount" />

            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
