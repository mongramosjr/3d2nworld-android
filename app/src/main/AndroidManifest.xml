<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.brainbox.a3d2nworld">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <!-- To access Google+ APIs: -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:fullBackupContent="@xml/backup_3d2n_world_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.ResortsActivity"
            android:label="@string/title_activity_deals"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.DealsActivity"
            android:label="@string/title_activity_deals"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.MainFragmentActivity"
            android:label="@string/title_activity_home"
            android:theme="@style/AppTheme.NoActionBar">

        </activity>
        <activity
            android:name=".activity.LoginActivity"
            android:label="@string/title_activity_login" />
        <activity
            android:name=".activity.DealActivity"
            android:label="@string/title_activity_deal"
            android:parentActivityName=".activity.MainFragmentActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <data
                    android:host="www.3d2nworld.com"
                    android:scheme="http" />

                <category android:name="android.intent.category.BROWSABLE" />
            </intent-filter>

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.brainbox.a3d2nworld.activity.MainFragmentActivity" />
        </activity>
    </application>

</manifest>